 const request = require('request')

 request.get('{{ host }}/api/v1/gdrive?url=https://drive.google.com/file/uc/d/pqld6gca_vqpl1r/view=download', {json: true}, (error, response, body) => {
   if (!error || response.statusCode == 200) {
     console.log(JSON.stringify(body))
   } else { return throw error }
 })
